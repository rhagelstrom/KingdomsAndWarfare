			<diefield name="die">
				<bounds>0,0,30,30</bounds>
				<readonly />
			</diefield>
			<basicnumber name="value">
				<bounds>0,0,30,30</bounds>
				<color>FFFFFF</color>
				<frame />
				<stateframe />
				<readonly />
				<script>					
					function onDragStart(button, x, y, draginfo)
						return window.onDragStart(button, x, y, draginfo);
					end

					function onDoubleClick(x, y)
						return window.onDoubleClick(x, y);
					end
				</script>
			</basicnumber>

