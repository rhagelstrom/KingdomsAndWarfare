<root>
	<!-- todo account from unselection -->
	<windowclass name="battletracker">
		<frame>ctbox</frame>
		<sizelimits>
			<minimum width="700" height="750" />
			<dynamic />
		</sizelimits>
		<softclose />
		<script file="battletracker/scripts/battletracker.lua" />
		<sheetdata>
			<windowtitlebar_ctbox name="title">
				<resource>battletracker_window_title</resource>
			</windowtitlebar_ctbox>
			<windowmenubar_ctbox name="menubar" />

			<anchor_content_ctbox_top name="contentanchor" />
			<anchor_content_ctbox_bottom name="bottomanchor" />

			<sub_content_framed_groupbox_narrow_bottom name="sub_controls">
				<class>sub_bt_controls</class>
			</sub_content_framed_groupbox_narrow_bottom>

			<sub_content_framed_groupbox_bottom name="uncommanded_units">
				<anchored>
					<sizelimits>
						<maximum height="150" />
					</sizelimits>
				</anchored>
				<class>battletracker_uncommandedunits</class>
			</sub_content_framed_groupbox_bottom>
			<scrollbar_content_base>
				<anchored to="uncommanded_units" />
				<target>uncommanded_units</target>
			</scrollbar_content_base>

			<sub_content_framed_groupbox_left name="primary_selected_unit">
				<anchored>
					<bottom parent="" anchor="center" />
				</anchored>
				<class>battletracker_emptysummary</class>
				<slot>1</slot>
				<instructionres>primary_summary_instructions</instructionres>
			</sub_content_framed_groupbox_left>
			<scrollbar_content_base>
				<anchored to="primary_selected_unit" />
				<target>primary_selected_unit</target>
			</scrollbar_content_base>

			<sub_content_framed_groupbox_left name="secondary_selected_unit">
				<anchored>
					<top parent="" anchor="center" />
				</anchored>
				<class>battletracker_emptysummary</class>
				<slot>2</slot>
				<instructionres>secondary_summary_instructions</instructionres>
			</sub_content_framed_groupbox_left>
			<scrollbar_content_base>
				<anchored to="secondary_selected_unit" />
				<target>secondary_selected_unit</target>
			</scrollbar_content_base>

			<list_content_framed_groupbox_right name="list">
				<class>battletracker_commander</class>
				<empty font="list-empty" textres="ct_emptylist" />
				<allowdelete />
				<script>
					function onSortCompare(w1, w2)
						return CombatManager.onSortCompare(w1.getDatabaseNode(), w2.getDatabaseNode());
					end
					function onFilter(w)
						local node = w.getDatabaseNode();
						return Session.IsHost or (DB.getValue(node, "tokenvis", 0) == 1) or (DB.getValue(node, "friendfoe", "") == "friend");
					end
				</script>
			</list_content_framed_groupbox_right>
			<scrollbar_content_list />
			
			<resize_ctbox />
		</sheetdata>
	</windowclass>
	<windowclass name="sub_bt_controls">
		<margins control="0,0,0,2" />
		<sheetdata>
			<anchor_ct_controls_left />
			<anchor_ct_controls_right />

			<button_ct_controls_setactive name="button_setactive">
				<gmvisibleonly />
			</button_ct_controls_setactive>
			<button_ct_controls_nextturn name="button_nextactor" />
			<button_ct_controls_menu name="button_menu">
				<gmvisibleonly />
				<script file="battletracker/scripts/bt_menu.lua" />
			</button_ct_controls_menu>

			<button_ct_controls_nextround name="button_nextround">
				<gmvisibleonly />
			</button_ct_controls_nextround>
			<number_ct_controls_rounds name="round" />
			<label_ct_controls_rounds name="label_round" />

			<area_ct_controls_center name="area_center" />
			<number_bt_controls_morale name="morale_friend">
				<anchored to="label_round" position="lefthigh" offset="140,0" />
				<tooltip textres="bt_tooltip_morale_friend" />
				<faction>friend</faction>
			</number_bt_controls_morale>
			<number_bt_controls_morale name="morale_neutral">
				<anchored to="morale_friend" position="righthigh" offset="25" />
				<tooltip textres="bt_tooltip_morale_neutral" />
				<faction>neutral</faction>
			</number_bt_controls_morale>
			<number_bt_controls_morale name="morale_foe">
				<anchored to="morale_neutral" position="righthigh" offset="25" />
				<tooltip textres="bt_tooltip_morale_foe" />
				<faction>foe</faction>
			</number_bt_controls_morale>
			<label>
				<anchored to="morale_friend" position="lefthigh" offset="25,0" />
				<static textres="bt_label_morale" />
			</label>
		</sheetdata>
	</windowclass>
	
	<windowclass name="battletracker_commander">
		<script file="battletracker/scripts/commander.lua" />
		<margins control="25,0,0,2" />
		<sizelimits>
			<minimum height="20" />
		</sizelimits>
		<sheetdata>
			<anchor_listitem_left_sm name="leftanchor" />
			<anchor_listitem_right_sm name="rightanchor" />

			<genericcontrol name="color_swatch">
				<anchored to="leftanchor" height="20" width="20">
					<top offset="7" />
					<left anchor="right" relation="relative" offset="7" />
				</anchored>
				<frame name="border" />
				<tooltip textres="color_edit" />
				<script file="battletracker/scripts/commander_colorswatch.lua" />
			</genericcontrol>

			<link_ct_entry name="link">
				<anchored merge="replace" to="rightanchor" width="20" height="20">
					<top offset="7" />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
			</link_ct_entry>
			<number_ctentry_initresult name="initresult">
				<anchored merge="replace" to="rightanchor" width="20" height="20">
					<top offset="7" />
					<right anchor="left" relation="relative" offset="-7" />
				</anchored>
			</number_ctentry_initresult>
			<label>
				<anchored to="rightanchor">
					<top offset="7" />
					<right anchor="left" relation="relative" offset="-7" />
				</anchored>
				<static textres="init" />
			</label>
			<string_ct_entry_name name="name">
				<anchored merge="replace" height="20">
					<left parent="leftanchor" anchor="right" relation="relative" offset="7" />
					<top offset="7" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-7" />
				</anchored>
				<empty textres="unknown_commander" />
			</string_ct_entry_name>
			<string_ct_entry_name name="nonid_name">
				<empty textres="library_recordtype_empty_nonid_npc" />
				<anchored merge="replace" height="20">
					<left parent="leftanchor" anchor="right" relation="relative" offset="7" />
					<top offset="7" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-7" />
				</anchored>
				<invisible />
			</string_ct_entry_name>

			<battletracker_unitlist />
		</sheetdata>
	</windowclass>
	
	<windowclass name="battletracker_uncommandedunits">
		<script file="battletracker/scripts/uncommanded_units.lua" />
		<sheetdata>
			<anchor_content_top />

			<header_content_framed_headersimple name="header">
				<static textres="missing_commander"/>
			</header_content_framed_headersimple>

			<battletracker_content_unitlist name="list">
				<script>
					function onListChanged()
						window.parentcontrol.setVisible(getWindowCount() > 0);
					end
				</script>
			</battletracker_content_unitlist>
		</sheetdata>
	</windowclass>
	<windowclass name="battletracker_unit">
		<margins>0,0,0,2</margins>
		<script file="battletracker/scripts/unit.lua" />
		<sheetdata>
			<anchor_listitem_left_sm name="leftanchor" />
			<anchor_listitem_right_sm name="rightanchor" />

			<token_ctentry_base name="token">
				<script file="battletracker/scripts/unit_token.lua" />
			</token_ctentry_base>
			<string_listitem_center name="name">
				<font>sheetlabel</font>
				<readonly />
				<script>
					function onValueChanged()
						window.updateName();
					end
				</script>
			</string_listitem_center>
		</sheetdata>
	</windowclass>
	<windowclass name="battletracker_emptysummary">
		<margins>5,5,5,5</margins>
		<sheetdata>
			<label name="text">
				<anchored merge="replace" position="over" />
				<multilinespacing>20</multilinespacing>
				<center />
				<script>
					function onInit()
						local res = window.parentcontrol.instructionres;
						if res and res[1] then
							setValue(Interface.getString(res[1]));
						end
					end
				</script>
			</label>
		</sheetdata>
	</windowclass>
</root>
