<root>
	<windowclass name="combattracker_host" merge="join">
		<script file="ct/scripts/ct_kw.lua" />
	</windowclass>
	<windowclass name="sub_ct_controls_host" merge="join">
		<sheetdata>
			<button_text_sm name="button_show_battle" insertbefore="area_center">
				<anchored to="leftanchor" width="70">
					<top />
					<left relation="relative" offset="5" postoffset="5" />
				</anchored>
				<textres>ct_battle_button</textres>
				<tooltip textres="ct_tooltip_battle" />
				<script>
					function onButtonPress()
						Interface.openWindow("battletracker", "combattracker");
					end
				</script>
			</button_text_sm>
		</sheetdata>
	</windowclass>
</root>
